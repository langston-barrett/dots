include "/home/siddharthist/.gtkrc-2.0.mine"
gtk-theme-name="Arc-OSX"
gtk-icon-theme-name="Paper"
gtk-font-name="Oxygen-Sans 11"
gtk-cursor-theme-name="Vanilla-DMZ"
gtk-cursor-theme-size=48
gtk-toolbar-style=GTK_TOOLBAR_ICONS
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=0
gtk-enable-input-feedback-sounds=0
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintslight"
gtk-xft-rgba="none"

# https://unix.stackexchange.com/questions/47674/how-should-one-change-the-width-of-scrollbar#47678
style "scrollbar-style"
{
   slider-width = 16
}
class "GtkScrollbar"   style "scrollbar-style"
class "GtkVScrollbar"  style "scrollbar-style"
class "GtkHScrollbar"  style "scrollbar-style"