# Brightness
# notify-send "light: $(light -G | egrep -o '[0-9]{1,2}' | head -n 1)"
XF86MonBrightnessDown
    light -U 5 &> /dev/null
XF86MonBrightnessUp
    light -A 5 &> /dev/null

# Volume
# notify-send $(amixer -D pulse sget Master | egrep -m 1 -o '[0-9]{1,2}%')
XF86AudioLowerVolume
    amixer sset Master 5%- &> /dev/null
XF86AudioRaiseVolume
    amixer sset Master 5%+ &> /dev/null

super + d
    nohup rofi -show run &> /dev/null &

# Will open an emacs client on the scratch buffer
super + e
    LD_LIBRARY_PATH=/nix/store/q1ayxyg7b3dba9wbyy4s4c2wqb60alql-emacs-24.5/share/emacs/24.5 emacs
    #emacsclient --create-frame

# Conky
super + f
    pkill conky || conky --config=$XDG_CONFIG_HOME/conky/conkyrc &> /dev/null

# Kill the X session
super + shift + q
    pkill Xorg
