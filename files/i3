#-*- mode: conf -*-
# dest: $XDG_CONFIG_HOME/i3/config
# * i3
# ** startup

exec_always polybar -r top
# exec_always polybar -r external
exec dropbox start
exec feh --bg-fill ~/.config/wallpaper.png

# ** variables

# See https://github.com/Kyczan/dotfiles
set_from_resource $bg i3.bgrnd #282A36    # background
set_from_resource $fg i3.fgrnd #FFFFFF    # foreground
set_from_resource $in i3.inact #676E7D    # inactive
set_from_resource $ur i3.urgen #E53935    # urgent
set_from_resource $tr i3.trans FF         # transparency

# ** general

# Alt is Mod1.
set $mod Mod1

bindsym $mod+c kill

# Mouse+mod floats & drags
floating_modifier $mod

for_window [title="^shell-hydra$"] floating enable
for_window [title="^shell-hydra$"] resize set 500 500
for_window [title="^shell-hydra$"] move position center
for_window [title="^shell-hydra$"] border pixel 2

bindsym $mod+Tab exec env HYDRA=1 alacritty --class shell-hydra --title shell-hydra, [title="shell-hydra"] focus

# bindsym $mod+Shift+space exec rofi -show drun -kb-cancel Alt+C -kb-cancel Ctrl+g
#bindsym $mod+space exec env HYDRA=1 alacritty --class hydra --title hydra, [title="hydra"] focus
bindsym $mod+space exec rofi -show drun -kb-cancel Alt+C -kb-cancel Alt+c -kb-cancel Alt+Q -kb-cancel Alt+q -kb-cancel Ctrl+g
bindsym $mod+Shift+space exec rofi -show drun -kb-cancel Alt+C -kb-cancel Ctrl+g

# bindsym $mod+d exec dmenu_run -fn "Open Sans-12"
# bindsym $mod+Return exec urxvt
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+Return exec urxvt

# enter fullscreen mode for the focused container
bindsym $mod+Shift+p fullscreen toggle

# ** navigation

set $left h
set $down j
set $up k
set $right l
set $workspace0 f
set $workspace1 d
set $workspace2 s
set $workspace3 a
set $resize r
set $stack t
set $split y
set $float O
set $reload w
set $restart r
set $exit e

